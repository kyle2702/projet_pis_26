# Firebase Admin SDK
FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"..."}

# Web Push VAPID Keys (required for push notifications)
# Generate with: node -e "const wp=require('web-push'); const k=wp.generateVAPIDKeys(); console.log(k)"
WEBPUSH_PUBLIC_KEY=your_public_key_here
WEBPUSH_PRIVATE_KEY=your_private_key_here
WEBPUSH_SUBJECT=mailto:your-email@example.com

# Server Port (optional, defaults to 3000)
PORT=3000
